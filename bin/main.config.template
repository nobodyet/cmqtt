#网卡配置信息 ETH=0 表示当前使用ETH0网卡作为外网  数据类型=整型
#ETH=0
ETH=0

#通知客户端定期汇报点击等用户信息的间隔时长 秒 数据类型=整型
#CHECK_ALIVE_TIME=600
CHECK_ALIVE_TIME=600

#定期更新的时间间隔 单位 秒 数据类型=整型
#HALL_REFRESH_TIME=600
HALL_REFRESH_TIME=6000

#栏目点击数目，定期回写数据库时长 单位 秒 数据类型=整型
#CLICK_REFRESH_TIME=200
CLICK_REFRESH_TIME=200

#系统判断超时用户的参数 超时时间= MAX_SOCK_LIFE * 2 秒
#MAX_SOCK_LIFE=	150
MAX_SOCK_LIFE=100

#系统初始赋值给成功登录用户的生命值 时间＝LOGINED_LIFE * 2 秒
#LOGIN_LIFE=60
LOGIN_LIFE=2

#连接以后不发数据而不会被服务器关闭连接的最大时间 CONNECT_LIFE*2 秒
#建议赋值不小于 2
#CONNECT_LIFE=5
CONNECT_LIFE=5

