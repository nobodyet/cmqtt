# redis信息
[REDIS]
HOST = redisdb
PORT = 6379
DBID = __AUTO_REPLACE__
AUTH = PASSWORD 

# [只有游戏服务器才会读取] 是为了区分redis中不同游戏的key 需要与loginserver和matchserver中的relaxgame.lua配置的相同
MARK=__AUTO_REPLACE__
[REDIS]

# 配置服务信息
[SERVICE]
# 服务类型 [login:登录服务器 match:比赛服务器 game:游戏服务器]
SERVICE_TYPE=__AUTO_REPLACE__

# 配置独特的脚本目录名称
UNIQUE_DIR=__AUTO_REPLACE__

# [只有游戏服务器才会读取] 游戏编号
GAMEID=__AUTO_REPLACE__

# add by liuqing 20170307 方便内网开发调试 直接应用开发目录下的脚本 这里加一个调试开关
# [需要发布时可以用sed批量替换"DEBUG_MODE= 1"为"DEBUG_MODE= 0" 一般无需手动编辑]
# 调试模式 0:关 1:开  外网需要置为0
DEBUG_MODE=1
[SERVICE]

